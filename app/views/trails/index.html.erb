<h1>Listing Trails</h1>

<hr>
Upload data (this will replace all of your organization's current data!)
<br><br>
<%= form_tag({ action: :upload }, multipart: true) do %>
  <% if current_user.admin? %>
  <%= text_field_tag 'source', nil, placeholder: "Organization" %>
  <% end %>
  <%= file_field_tag 'trails' %><br>
  <%= submit_tag "Submit" %>
<% end %>
<hr>
<% if current_user.admin? %>
Showing all trails.
<% else %> 
<%= link_to "All Trails", :action => "index", :all => "true" %>
<%= link_to "#{current_user.organization} Trails", :action => "index" %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>

<!--       <th>Opdmd access</th>
      <th>Source</th>
      <th>Steward</th>
      <th>Length</th>
      <th>Horses</th>
      <th>Dogs</th>
      <th>Bikes</th> -->

      <th>Description</th>
      <th>Source</th>
      <!-- <th>Difficulty</th> -->
      <!-- <th>Hike time</th> -->
      <!-- <th>Print map url</th> -->
      <!-- <th>Surface</th> -->
      <th colspan=3>Action</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trails.each do |trail| %>
      <tr>
        <td><%= trail.name %></td>

<!--         <td><%= trail.opdmd_access %></td>
        <td><%= trail.source %></td>
        <td><%= trail.steward %></td>
        <td><%= trail.length %></td>
        <td><%= trail.equestrian %></td>
        <td><%= trail.dogs %></td>
        <td><%= trail.roadbike %></td> -->
        <td><%= truncate(trail.description, length: 50) %></td>
        <td><%= trail.source %></td>
        <!-- <td><%= trail.difficulty %></td> -->
        <!-- <td><%= trail.hike_time %></td> -->
        <!-- <td><%= trail.map_url %></td> -->
        <% if current_user %>
        <td><%= link_to 'Show', trail %></td>
        <td><%= link_to 'Edit', edit_trail_path(trail) %></td>
        <td><%= link_to 'Delete', trail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

