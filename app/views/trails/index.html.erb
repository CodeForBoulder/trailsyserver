<h1>Listing trails</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Opdmd access</th>
      <th>Source</th>
      <th>Steward</th>
      <th>Length</th>
      <th>Horses</th>
      <th>Dogs</th>
      <th>Bikes</th>
      <th>Description</th>
      <th>Difficulty</th>
      <th>Hike time</th>
      <th>Print map url</th>
      <th>Surface</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trails.each do |trail| %>
      <tr>
        <td><%= trail.name %></td>
        <td><%= trail.opdmd_access %></td>
        <td><%= trail.source %></td>
        <td><%= trail.steward %></td>
        <td><%= trail.length %></td>
        <td><%= trail.horses %></td>
        <td><%= trail.dogs %></td>
        <td><%= trail.bikes %></td>
        <td><%= trail.description %></td>
        <td><%= trail.difficulty %></td>
        <td><%= trail.hike_time %></td>
        <td><%= trail.print_map_url %></td>
        <td><%= trail.surface %></td>
        <td><%= link_to 'Show', trail %></td>
        <td><%= link_to 'Edit', edit_trail_path(trail) %></td>
        <td><%= link_to 'Destroy', trail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

