<h1>Listing organizations</h1>
<p class='tableCaption'>
  Manage organization information here.
</p>
<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Full name</th>
      <th>Phone</th>
      <th>Url</th>
      <th colspan=2>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.code %></td>
        <td><%= organization.full_name %></td>
        <td><%= organization.phone %></td>
        <td><%= organization.url %></td>
        <% if current_user.admin? || (current_user.organization.code == organization.code) %>
          <td><%= link_to 'Edit', edit_organization_path(organization), :class => "tableLink" %></td>
          <% if current_user.admin? %>
            <td><%= link_to 'Destroy', organization, :class => "tableLink-delete", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br><br>
<% if current_user.admin? %>
<%= link_to 'Add New Organization', new_organization_path, :class => "addNewButton" %>
<% end %>