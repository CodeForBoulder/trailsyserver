<h1>Listing organizations</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Full name</th>
      <th>Phone</th>
      <th>Url</th>
      <th colspan=2>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.code %></td>
        <td><%= organization.full_name %></td>
        <td><%= organization.phone %></td>
        <td><%= organization.url %></td>
        <% if current_user.admin? || (current_user.organization.code == organization.code) %>
          <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
          <% if current_user.admin? %>
            <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
<%= link_to 'New Organization', new_organization_path %>
<% end %>