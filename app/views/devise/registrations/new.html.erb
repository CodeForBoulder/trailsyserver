<h1>Sign Up</h1>

<div class='formContent'>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <span class='h3-Edit'><%= f.label :email %></span>
    <%= f.email_field :email, :autofocus => true %>

    <div>
      <span class='h3-Edit'><%= f.label :organization %></span>
      <%= f.select :organization_id, Organization.all.collect{ |org| [org.code, org.id]} %>
      <br>
      <span class='finePrint'>If your organization is not listed here, contact an administrator.
        <br>
      This "source" field in the trail data files you will supply must contain this code.</span>
    </div>
    <div>
      <span class='h3-Edit'><%= f.label :password %></span>
      <%= f.password_field :password %></div>

    <div>
      <span class='h3-Edit'><%= f.label :password_confirmation %></span>
      <%= f.password_field :password_confirmation %></div>

    <br>
    <div><%= f.submit "Sign Up" %></div>
  <% end %>
</div>

<div class='formButtons'>
  <%= render "devise/shared/links" %>
</div>
